# --- Core ---
APP_NAME=BotBoard
SECRET_KEY=change-me-long-random
BASE_URL=http://localhost:8080
ENV=production

# --- Database ---
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=botboard
POSTGRES_USER=botboard
POSTGRES_PASSWORD=botboard_pass
DATABASE_URL=postgresql+psycopg://botboard:botboard_pass@db:5432/botboard

# --- Redis (optional) ---
REDIS_URL=redis://redis:6379/0

# --- SMTP for magic links ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=changeme
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=true

# --- Security ---
MAGIC_LINK_EXP_MIN=15
ACCESS_TOKEN_EXP_MIN=120
RATE_LIMIT_BURST=20
RATE_LIMIT_WINDOW_S=60

# --- Admin ---
# First verified email auto-promoted to admin if true
AUTO_PROMOTE_FIRST_ADMIN=true
# Optional allowlist: comma-separated emails that become admin on first login
ADMIN_ALLOWLIST=
# Static API key for admin MCP access (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ADMIN_API_KEY=
